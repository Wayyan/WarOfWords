<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro"
    tools:context=".KidPuzzleActivity">

    <me.myatminsoe.mdetect.MMTextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:drawableLeft="@drawable/ic_trophy_simple"
        android:drawablePadding="@dimen/extrasmall_padding"
        android:paddingLeft="@dimen/extrasmall_padding"
        android:text="လွယ်ကူသော ကစားနည်းများ"
        android:textColor="@android:color/white"
        android:textSize="@dimen/medium_text_size" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:clipToPadding="false"
        android:padding="@dimen/extrasmall_padding" />

    <me.myatminsoe.mdetect.MMTextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rcNormal"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:drawableLeft="@drawable/ic_trophy_hard"
        android:drawablePadding="@dimen/extrasmall_padding"
        android:paddingLeft="@dimen/extrasmall_padding"
        android:text="ခက်ခဲသော ကစားနည်းများ"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/medium_text_size" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcIntermediate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:clipToPadding="false"
        android:padding="@dimen/extrasmall_padding" />


</RelativeLayout>