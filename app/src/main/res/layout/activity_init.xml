    <android.support.v7.widget.Toolbar
        android:id="@+id/init_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />

    <com.evolve.backdroplibrary.BackdropContainer
        android:id="@+id/mbackdropcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:closeIcon="@drawable/ic_close_white"
        app:duration="200"
        app:menuIcon="@drawable/ic_menu_white_24dp">

        <LinearLayout
            android:id="@+id/init_ln_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cd_edit_profile"
                style="@style/SettingSixCardStyle"
                android:clickable="true"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardElevation="2dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/rpl_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:mrl_rippleColor="@color/rippleColorBlue"
                    app:mrl_rippleDuration="750"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleHover="true">

                    <LinearLayout style="@style/SettingLinearInsideStyle">

                        <ImageView
                            style="@style/SettingImageViewInsideStyle"
                            android:padding="2dp"
                            android:src="@drawable/pencil_white" />

                        <TextView
                            style="@style/SettingTextViewInsideStyle"
                            android:text="Edit Profile" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cd_check_update"
                style="@style/SettingSixCardStyle"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardElevation="2dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/rpl_check_update"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:mrl_rippleColor="@color/rippleColorBlue"
                    app:mrl_rippleDuration="750"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleHover="true">

                    <LinearLayout style="@style/SettingLinearInsideStyle">

                        <ImageView
                            style="@style/SettingImageViewInsideStyle"
                            android:src="@drawable/ic_update" />

                        <TextView
                            style="@style/SettingTextViewInsideStyle"
                            android:text="Check For Update" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cd_send_feedback"
                style="@style/SettingSixCardStyle"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardElevation="2dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/rpl_send_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:mrl_rippleColor="@color/rippleColorBlue"
                    app:mrl_rippleDuration="750"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleHover="true">

                    <LinearLayout style="@style/SettingLinearInsideStyle">

                        <ImageView
                            style="@style/SettingImageViewInsideStyle"
                            android:src="@drawable/ic_feedback" />

                        <TextView
                            style="@style/SettingTextViewInsideStyle"
                            android:text="Send Feed Back" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cd_setting"
                style="@style/SettingSixCardStyle"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardElevation="2dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/rpl_setting"
