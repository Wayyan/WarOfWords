                    <!--</android.support.v7.widget.CardView>-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/ln_three_card_holder"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:drawableLeft="@drawable/ic_star_border_black_24dp"
                        android:gravity="center"
                        android:text="    Your Achievements..."
                        android:textColor="@color/colorAttractive" />

                    <LinearLayout
                        android:id="@+id/ln_three_card_holder"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="36dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cd_single_score"
                            style="@style/ThreeCardStyle"
                            android:layout_marginLeft="24dp"
                            app:cardBackgroundColor="@color/cardview_light_background"
                            app:cardCornerRadius="@dimen/margin_ex_small"
                            app:cardElevation="5dp">

                            <com.balysv.materialripple.MaterialRippleLayout
                                android:id="@+id/rpl_single_score"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:mrl_rippleColor="@color/rippleColorWhite"
                                app:mrl_rippleDuration="750"
                                app:mrl_rippleDelayClick="false"
                                app:mrl_rippleHover="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <com.github.lzyzsd.circleprogress.ArcProgress
                                            android:id="@+id/graduated_arc_progress"
                                            android:layout_width="56dp"
                                            android:layout_height="56dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="@dimen/margin_ex_small"
                                            app:arc_bottom_text=""
                                            app:arc_finished_color="@color/colorPrimary"
                                            app:arc_stroke_width="3dp"
                                            app:arc_suffix_text_padding="0dp"
                                            app:arc_suffix_text_size="12sp"
                                            app:arc_text_size="20sp"
                                            app:arc_unfinished_color="#ffcdd2" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_gravity="center"
                                            android:text="Graduated"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="11sp" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </com.balysv.materialripple.MaterialRippleLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cd_dual_score"
                            style="@style/ThreeCardStyle"
                            android:layout_below="@id/cd_img_profile_holder"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            app:cardBackgroundColor="@color/cardview_light_background"
                            app:cardCornerRadius="@dimen/margin_ex_small"
                            app:cardElevation="5dp">

                            <com.balysv.materialripple.MaterialRippleLayout
                                android:id="@+id/rpl_dual_score"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:mrl_rippleColor="@color/rippleColorWhite"
                                app:mrl_rippleDuration="750"
                                app:mrl_rippleDelayClick="false"
                                app:mrl_rippleHover="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <com.github.lzyzsd.circleprogress.ArcProgress
                                            android:id="@+id/godplayer_arc_progress"
                                            android:layout_width="56dp"
                                            android:layout_height="56dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="@dimen/margin_ex_small"
                                            app:arc_bottom_text=""
                                            app:arc_finished_color="@color/colorPrimaryDark"
                                            app:arc_max="100"
                                            app:arc_progress="0"
                                            app:arc_stroke_width="3dp"
                                            app:arc_suffix_text_padding="0dp"
                                            app:arc_suffix_text_size="12sp"
                                            app:arc_text_size="20sp"
                                            app:arc_unfinished_color="#c8e6c9" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_gravity="center"
                                            android:text="God Player"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="11sp" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </com.balysv.materialripple.MaterialRippleLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cd_challenge_score"
                            style="@style/ThreeCardStyle"
                            android:layout_marginRight="24dp"
                            app:cardBackgroundColor="@color/cardview_light_background"
                            app:mrl_rippleDuration="1000"
                            app:mrl_rippleDelayClick="false"
                            app:cardElevation="5dp">

                            <com.balysv.materialripple.MaterialRippleLayout
                                android:id="@+id/rpl_challenge_score"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:mrl_rippleColor="@color/rippleColorWhite"
                                app:mrl_rippleDuration="750"
                                app:mrl_rippleDelayClick="false"
                                app:mrl_rippleHover="true">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <com.github.lzyzsd.circleprogress.ArcProgress
                                            android:id="@+id/godkiller_arc_progress"
                                            android:layout_width="56dp"
                                            android:layout_height="56dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="@dimen/margin_ex_small"
                                            app:arc_bottom_text=""
                                            app:arc_finished_color="@color/colorPrimaryDark"
                                            app:arc_max="100"
                                            app:arc_progress="0"
                                            app:arc_stroke_width="3dp"
                                            app:arc_suffix_text_padding="0dp"
                                            app:arc_suffix_text_size="12sp"
                                            app:arc_text_size="20sp"
                                            app:arc_unfinished_color="#bbdefb" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_gravity="center"
                                            android:text="God Killer"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="11sp" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </com.balysv.materialripple.MaterialRippleLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/cd_btn_gp"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:drawableLeft="@drawable/ic_light_bulb"
                    android:gravity="center"
                    android:text="    Play Now..."
                    android:textColor="@color/colorPrimaryDark" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cd_btn_gp"
                    android:layout_width="match_parent"
                    android:layout_height="188dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="@dimen/margin_ex_small">


                    <RelativeLayout
                        android:id="@+id/ln_btn_gp"
                        android:layout_width="match_parent"
                        android:layout_height="188dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/margin_ex_small"
                        android:paddingTop="@dimen/margin_ex_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <android.support.v7.widget.CardView
                                android:id="@+id/cd_btn_single"
                                style="@style/ThreeCardMainStyle"
                                android:layout_marginLeft="@dimen/margin_ex_small"
                                android:layout_marginRight="@dimen/margin_ex_small"
                                app:cardBackgroundColor="@color/cardview_light_background">

                                <com.balysv.materialripple.MaterialRippleLayout
                                    android:id="@+id/rpl_btn_single"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:mrl_rippleColor="@color/rippleColorWhite"
                                    app:mrl_rippleDuration="750"
                                    app:mrl_rippleDelayClick="true"
                                    app:mrl_rippleHover="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="4">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_marginTop="@dimen/margin_small"
                                            android:layout_weight="2"
                                            android:src="@drawable/ai_icon" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_marginBottom="@dimen/margin_small"
                                            android:layout_weight="2"
                                            android:gravity="center"
                                            android:text="Single"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="16sp" />

                                    </LinearLayout>
                                </com.balysv.materialripple.MaterialRippleLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/cd_btn_dual"
                                style="@style/ThreeCardMainStyle"
                                android:layout_marginRight="@dimen/margin_ex_small"
                                app:cardBackgroundColor="@color/cardview_light_background">

                                <com.balysv.materialripple.MaterialRippleLayout
                                    android:id="@+id/rpl_btn_dual"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:mrl_rippleColor="@color/rippleColorWhite"
                                    app:mrl_rippleDuration="750"
                                    app:mrl_rippleDelayClick="true"
                                    app:mrl_rippleHover="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="4">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_marginTop="@dimen/margin_small"
                                            android:layout_weight="2"
                                            android:src="@drawable/dual_icon" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_marginBottom="@dimen/margin_small"
                                            android:layout_weight="2"
                                            android:gravity="center"
                                            android:text="Dual"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="16sp" />

                                    </LinearLayout>
                                </com.balysv.materialripple.MaterialRippleLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/cd_btn_kid"
                                style="@style/ThreeCardMainStyle"
                                android:layout_marginRight="@dimen/margin_ex_small"
                                app:cardBackgroundColor="@color/cardview_light_background">

                                <com.balysv.materialripple.MaterialRippleLayout
                                    android:id="@+id/rpl_btn_kid"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:mrl_rippleColor="@color/rippleColorWhite"
                                    app:mrl_rippleDuration="750"
                                    app:mrl_rippleDelayClick="true"
                                    app:mrl_rippleHover="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="4">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_marginTop="@dimen/margin_small"
                                            android:layout_weight="2"
                                            android:src="@drawable/kid" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_marginBottom="@dimen/margin_small"
                                            android:layout_weight="2"
                                            android:gravity="center"
                                            android:text="For Kids"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="16sp" />

                                    </LinearLayout>
                                </com.balysv.materialripple.MaterialRippleLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>


            <View
                android:id="@+id/dim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#69000000"
                android:visibility="gone" />

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/bottom_sheet_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:clickable="false"
                android:clipToPadding="true"
                app:behavior_hideable="true"
                app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_small"
                    android:clickable="false">

                    <!--<TextView-->
                    <!--android:id="@+id/tv_choose_one"-->
                    <!--style="@style/DialogTitle"-->
                    <!--android:layout_width="wrap_content"-->
