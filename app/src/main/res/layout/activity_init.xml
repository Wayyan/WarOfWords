                app:cardBackgroundColor="@color/colorPrimary"
                app:cardElevation="2dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/rpl_acknowledgement"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:mrl_rippleColor="@color/rippleColorBlue"
                    app:mrl_rippleDuration="750"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleHover="true">

                    <LinearLayout style="@style/SettingLinearInsideStyle">

                        <ImageView
                            style="@style/SettingImageViewInsideStyle"
                            android:src="@drawable/ic_acknowledgemment" />

                        <TextView
                            style="@style/SettingTextViewInsideStyle"
                            android:text="My Acknowledgements" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cd_about_app"
                style="@style/SettingSixCardStyle"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardElevation="2dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/rpl_about"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:mrl_rippleColor="@color/rippleColorBlue"
                    app:mrl_rippleDuration="750"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleHover="true">

