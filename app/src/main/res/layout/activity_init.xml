                            android:src="@drawable/ic_info" />

                        <TextView
                            style="@style/SettingTextViewInsideStyle"
                            android:text="About App" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:background="@drawable/backdrop_font_style"
            android:clickable="true"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_profile"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_above="@+id/cd_btn_gp">

                    <RelativeLayout
                        android:id="@+id/cd_img_profile_holder"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_ex_small"
                        android:background="@drawable/corner_96_blue"
                        android:padding="1dp">

                        <ImageView
                            android:id="@+id/img_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:src="@drawable/user_lite" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cd_img_profile_holder"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_ex_small"
                        android:text="Rhatt Buttler"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_profile_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:text="(New Born)" />

                    <!--<android.support.v7.widget.CardView-->
                    <!--android:id="@+id/cd_profile_name"-->
