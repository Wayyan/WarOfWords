<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/extrasmall_padding"
    android:background="@drawable/normal"
    tools:context=".fragment.normal_fragment1">

    <LinearLayout
        android:id="@+id/tQuestionCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:orientation="horizontal"
        android:weightSum="10">

        <View
            android:id="@+id/v1"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_height"
            android:layout_margin="@dimen/extraSmall_margin"
            android:layout_weight="1"
            android:background="@color/view_color"  />

        <View
            android:id="@+id/v2"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_height"
            android:layout_margin="@dimen/extraSmall_margin"
            android:layout_weight="1"
            android:background="@color/view_color" />

        <View
            android:id="@+id/v3"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_height"
            android:layout_margin="@dimen/extraSmall_margin"
            android:layout_weight="1"
            android:background="@color/view_color"  />

        <View
            android:id="@+id/v4"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_height"
            android:layout_margin="@dimen/extraSmall_margin"
            android:layout_weight="1"
            android:background="@color/view_color"  />

        <View
            android:id="@+id/v5"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_height"
            android:layout_margin="@dimen/extraSmall_margin"
            android:layout_weight="1"
            android:background="@color/view_color" />

        <View
            android:id="@+id/v6"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_height"
            android:layout_margin="@dimen/extraSmall_margin"
            android:layout_weight="1"
            android:background="@color/view_color" />

        <View
            android:id="@+id/v7"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_height"
            android:layout_margin="@dimen/extraSmall_margin"
            android:layout_weight="1"
            android:background="@color/view_color" />

        <View
            android:id="@+id/v8"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_height"
            android:layout_margin="@dimen/extraSmall_margin"
            android:layout_weight="1"
            android:background="@color/view_color"  />

        <View
            android:id="@+id/v9"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_height"
            android:layout_margin="@dimen/extraSmall_margin"
            android:layout_weight="1"
            android:background="@color/view_color"  />

        <View
            android:id="@+id/v10"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_height"
            android:layout_margin="@dimen/extraSmall_margin"
            android:layout_weight="1"
            android:background="@color/view_color"  />

    </LinearLayout>

    <TextView
        android:id="@+id/tDiamond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tQuestionCount"
        android:background="@drawable/text_view_design"
        android:drawablePadding="@dimen/small_padding"
        android:drawableRight="@drawable/ic_diamond"
        android:paddingLeft="@dimen/medium_padding"
        android:paddingRight="@dimen/drawable_padding"
        android:text="1"
        android:textColor="@color/enable_text_color"
        android:textSize="@dimen/large_text_size" />

    <TextView
        android:id="@+id/tScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tDiamond"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/large_margin"
        android:background="@drawable/text_view_design"
        android:drawableLeft="@drawable/ic_dollar"
        android:drawablePadding="@dimen/small_padding"
        android:paddingLeft="@dimen/small_padding"
        android:paddingRight="@dimen/medium_padding"
        android:text="0"
        android:textColor="@color/enable_text_color"
        android:textSize="@dimen/large_text_size" />
    <LinearLayout
        android:id="@+id/tvLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tScore"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/large_margin"
        android:background="@drawable/layout_design"
        android:minWidth="@dimen/minWidth_Question">

        <TextView
            android:id="@+id/nQuestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Apple"
            android:textColor="@color/titleText_color"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout

        android:layout_width="wrap_content"
       android:minWidth="@dimen/minWidth_Answers"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLayout"
        android:layout_centerInParent="true"
        android:background="@drawable/layout_design"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/rgNormal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/nRbtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_margin"
                android:button="@drawable/ic_radio_button"
                android:paddingLeft="@dimen/small_padding"
                android:text="ပန်းသီး"
                android:textColor="@color/text_color"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/nRbtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_margin"
                android:button="@drawable/ic_radio_button"
                android:paddingLeft="@dimen/small_padding"
                android:text="ပန်းတီဂ"
                android:textColor="@color/text_color"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/nRbtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_margin"
                android:button="@drawable/ic_radio_button"
                android:paddingLeft="@dimen/small_padding"
                android:text="ပမ်းသီဂ"
                android:textColor="@color/text_color"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />
        </RadioGroup>
    </LinearLayout>



    <Button
        android:id="@+id/nbtnFree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/medium_margin"
        android:background="@drawable/button_design"
        android:drawablePadding="@dimen/drawable_padding"
        android:drawableRight="@drawable/ic_lightbulb"
        android:gravity="center"
        android:text="FREE"
        android:textColor="@color/enable_text_color"
        android:textSize="@dimen/medium_text_size" />

    <Button
        android:id="@+id/nbtnOkay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nbtnFree"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/medium_margin"
        android:background="@drawable/button_design"
        android:drawablePadding="@dimen/drawable_padding"
        android:drawableRight="@drawable/ic_send1"
        android:enabled="false"
        android:gravity="center"
        android:text="OKAY"
        android:textColor="@color/enable_text_color"
        android:textSize="@dimen/medium_text_size" />
</RelativeLayout>
