<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="KidTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="ContentItem">
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
    </style>

    <style name="WinnerTextStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SixButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/six_btn_design</item>
    </style>

    <style name="SixConsonentButton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/six_consonent_style</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ConsonentHolder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:weightSum">5</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
    </style>

    <style name="ConsonentSingleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ThreeCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_ex_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_ex_small</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ThreeCardBottomSheetStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_ex_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
    </style>

    <style name="LinearCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">208dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
        <item name="android:paddingTop">@dimen/margin_ex_small</item>
        <item name="android:paddingBottom">@dimen/margin_ex_small</item>
    </style>

    <style name="ThreeCardMainStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
    </style>

    <style name="ImageViewInSheetStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/margin_ex_small</item>
        <item name="android:padding">@dimen/margin_ex_small</item>
    </style>

    <style name="TextViewInSheetStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/margin_ex_small</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SettingSixCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_ex_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
    </style>

    <style name="SettingLinearInsideStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginLeft">56dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingImageViewInsideStyle">
        <item name="android:layout_width">@dimen/margin_normal</item>
        <item name="android:layout_height">@dimen/margin_normal</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SettingTextViewInsideStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ChildrenCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="SixCircleImageviewStyle">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/alert_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/alert_exit_anim</item>
    </style>

    <style name="ChildButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@drawable/btn_corner_blue</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_marginTop">@dimen/margin_ex_small</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

</resources>
